/* pages/newsDetail/newsDetail.wxss */

.title{
  margin-left: 24rpx;
  margin-right:24rpx;
  font-size: 48rpx;
  font-weight: 800;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
  display:flex;
}

.rich-text{
  margin-left: 24rpx;
  margin-right:24rpx;
  font-size: 36rpx;
  letter-spacing: 3rpx;
}

.pic{
  text-align: center;
  width:100%;
  border-bottom: 1px solid gray;
  box-shadow: 0px 0px 10px whitesmoke inset;
}
.time{
  font-size:24rpx;
  margin-left: 24rpx;
  color: gray;
}
.share{
  height: 120rpx;
  width: 120rpx;
  
  border-radius: 100%;
  position: fixed;
  bottom: 70rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.star{
  height: 120rpx;
  width: 120rpx;
  
  border-radius: 100%;
  position: fixed;
  bottom: 100rpx;
  right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.move{
  width: 100%;
  height: 100%;
}


button {
  position:relative;
  display:block;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:5px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#000000;
  background-color:#F8F8F8;
}

button::after{
  border: none;
}
